<% content_for :top_content do %>
  <div class="container">
  	  <%= @question.inspect %>
  	  <h2>Your Highest Score: <%= $highscore %> </h2> 
  	  <h2>Current Score: <%= $score %> </h2> 
      	<h3><strong>Question <%= $p+1 %></strong></h3>
      	<strong><%= @question.content %></strong><br>
      	<form action= <%= @question.quiz_type.to_s %> method="post">
      	  <div class="checkbox">
	      		<label><%= check_box_tag(:A) %><%= @question.op1 %> </label>
	      	</div>
	      	<div class="checkbox">
	      	<label><%= check_box_tag(:B) %> <%= @question.op2 %> </label>
	      	</div>
	      	<div class="checkbox">
	      	<label><%= check_box_tag(:C) %> <%= @question.op3 %> </label>
	      	</div>
	      	<div class="checkbox">
	      	<label><%= check_box_tag(:D) %> <%= @question.op4 %> </label>   
	      	</div><br>
	      	<input type="submit" name="Submit" value="Submit" class="btn btn-default btn-md">
      	</form>  	      	      	
    </div>
<% end %>
